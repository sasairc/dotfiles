#compdef clbiff

function _clbiff() {
    _arguments -s : \
        {-i,--interval}'[interval time]':keyword \
        {-c,--command}'[specifies command]':keyword \
        {-f,--file}'[monitored file]:file:_files' \
        {-q,--quiet}'[quiet mode]' \
        {-v,--verbose}'[verbose mode]' \
        --help'[display help]' \
        --version'[output version]'
}

_clbiff
